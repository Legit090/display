doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        style
          include ../static/css/Signin.css
          include ../static/css/media.css
    body 
        -if (messages.error){
            div.alert.alert-err 
                span #{messages.error} 
                span.alert-timer
        -}
        -if (message.failure){
            div.alert.alert-err 
                span #{message.failure}
                span.alert-timer
        -}  
        -if (message.success){
            div.alert.alert-success 
                span #{message.success}
                span.alert-timer
        -}  
        .container
          .forms-container
            .signin-signup
              form.sign-in-form(action="/security/login", method="post") 
                h2.title Sign in
                .input-field
                  i 
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                        path(d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z")
                  input(type="email", name="email", placeholder="Email" required)
                .input-field
                  i
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                        path(d="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z")
                  input(type="password",placeholder="Password", name="password" required)
                input.btn.solid(type='submit' value='Login')
              form.sign-up-form(action="/security/register", method="post") 
                h2.title Sign up
                //- #profile-container 
                //-   input.hide(type="text", name="profile")
                .input-field
                  i
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                        path(d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z")
                  input(type="text", name="name",placeholder='Username' required )
                .input-field
                  i 
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
                        path(d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z")
                  input(type="email", name="email", placeholder='Email' required )
                .input-field
                  i
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                        path(d="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z")
                  input(type="password", name="password", placeholder='Password' required )
                input.btn(type='submit' value='Sign up')
          .panels-container
            .panel.left-panel
              .content
                h3 New here ?
                button#sign-up-btn.btn.transparent
                  | Sign up
              img.image(src='../static/img/log.svg' alt='')
            .panel.right-panel
              .content
                h3 One of us ?
                button#sign-in-btn.btn.transparent
                  | Sign in
              img.image(src='../static/img/register.svg' alt='')
        script(src='../static/js/SignIn.js' type="module")