doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../static/css/index.css")
        link(rel="stylesheet", href="../static/css/media.css")

        title ChatRoom
    body
        //- div#nav
        p#owner.hide #{user}
        //- P#ownerPic.hide #{profilePic}

        div#content-container
            div#contacts-list
                div#logo 
                    img(src="../static/img/logo.png")
                    span GigaChat
                div 
                    input#search-contacts(type="text", name="search-contacts" placeholder="Search Contacts...")
                div#contacts-container
                div#profile
                    div
                        div#profile-img
                        span#profile-Name
                    form(action="/logout?_method=delete" method="POST") 
                        button(type="submit") 
                            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
                                path(d="M288 32c0-17.7-14.3-32-32-32s-32 14.3-32 32V256c0 17.7 14.3 32 32 32s32-14.3 32-32V32zM143.5 120.6c13.6-11.3 15.4-31.5 4.1-45.1s-31.5-15.4-45.1-4.1C49.7 115.4 16 181.8 16 256c0 132.5 107.5 240 240 240s240-107.5 240-240c0-74.2-33.8-140.6-86.6-184.6c-13.6-11.3-33.8-9.4-45.1 4.1s-9.4 33.8 4.1 45.1c38.9 32.3 63.5 81 63.5 135.4c0 97.2-78.8 176-176 176s-176-78.8-176-176c0-54.4 24.7-103.1 63.5-135.4z")
            template#contact-template
                button.contact.inactive-contact 
                    div.unselectable 
                        span.contact-img.unselectable
                        div 
                            span.contact-Name.unselectable
                            span.contact-isOnline.unselectable
                            span.hide.contact-isOnline-id
                    div.contact-new-messages
            div#conversation-container
                div#conversation-contact.hide
                    div 
                        svg#chat-back-btn.hide(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
                            path(d="M48 256a208 208 0 1 1 416 0A208 208 0 1 1 48 256zm464 0A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM217.4 376.9c4.2 4.5 10.1 7.1 16.3 7.1c12.3 0 22.3-10 22.3-22.3V304h96c17.7 0 32-14.3 32-32V240c0-17.7-14.3-32-32-32H256V150.3c0-12.3-10-22.3-22.3-22.3c-6.2 0-12.1 2.6-16.3 7.1L117.5 242.2c-3.5 3.8-5.5 8.7-5.5 13.8s2 10.1 5.5 13.8l99.9 107.1z")
                            span#chat-back-btn-text.hide
                        span#conversation-contact-img
                        span#conversation-contact-Name
                    div
                        svg#clear-chat(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
                            path(d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z")
                        span.clear-chat-text Clear Chat
                div#chat-container
                div#send-chat-container.hide
                    input#send-chats(type="text", name="chats" placeholder="Type a message...")
                    button#send-chat-btn 
                        svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512")
                            path(d="M498.1 5.6c10.1 7 15.4 19.1 13.5 31.2l-64 416c-1.5 9.7-7.4 18.2-16 23s-18.9 5.4-28 1.6L284 427.7l-68.5 74.1c-8.9 9.7-22.9 12.9-35.2 8.1S160 493.2 160 480V396.4c0-4 1.5-7.8 4.2-10.7L331.8 202.8c5.8-6.3 5.6-16-.4-22s-15.7-6.4-22-.7L106 360.8 17.7 316.6C7.1 311.3 .3 300.7 0 288.9s5.9-22.8 16.1-28.7l448-256c10.7-6.1 23.9-5.5 34 1.4z")
            template#chat-template
                div(data-long-press-delay="3000").chat-card
                    span.chat-message
        //- script(src="../static/js/long-press-event.min.js") 
        script(src="../static/js/index.js",type='module') 